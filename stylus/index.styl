.lara-modals-container-fixed
    position fixed
    top 0
    left 0
    width 100%
    height 100vh
    overflow-x hidden
    overflow-y hidden
    &--scroll-y
        overflow-y scroll
    &--scroll-x
        overflow-x scroll

.lara-modal
    display none
    position fixed
    top: 0
    left: 0
    width: 100%
    height: 100vh
    z-index: 1000
    &--pre-show
        display block
        opacity 0
        transition 0.25s
    &--show
        opacity 1
        display block

.lara-modal_wrapper
    height 100vh
    position relative
    background rgba(0, 0, 0, 0.5)
    overflow auto

.lara-modal_box
    transition 0.5s
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    padding 10px
    box-sizing border-box
    &--top
        top 0
        transform translate(-50%, 0)
    &--left
        left 0
        transform translate(0, -50%)

    &--top&--left
        top 0
        left 0
        transform translate(0, 0)

.lara-modal_body
    background #fff
    box-shadow 0 5px 50px rgba(0, 0, 0, 0.1)

.lara-modal_body_wrapper
    padding 10px
    box-sizing border-box
    min-width 300px