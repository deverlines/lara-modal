.lara-modal
.lara-modal *
    box-sizing border-box

.lara-modals-container-fixed
    position fixed
    top 0
    left 0
    width 100%
    height 100vh
    overflow-x hidden
    overflow-y hidden
    &--scroll-y
        overflow-y scroll
    &--scroll-x
        overflow-x scroll

.lara-modal
    display none
    position fixed
    top: 0
    left: 0
    width: 100%
    height: 100vh
    z-index: 1000
    &--pre-show
        display block
        opacity 0
        transition 0.25s
    &--show
        opacity 1
        display block

.lara-modal_wrapper
    height 100vh
    position relative
    background rgba(0, 0, 0, 0.5)
    overflow auto

.lara-modal_box
    transition 0.5s
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    &--top
        top 0
        transform translate(-50%, 0)
    &--left
        left 0
        transform translate(0, -50%)

    &--top&--left
        top 0
        left 0
        transform translate(0, 0)

.lara-modal_body
    background #fff
    box-shadow 0 5px 50px rgba(0, 0, 0, 0.1)

.lara-modal_body_wrapper
    padding 20px

.lara-modal_content
    min-width 280px
    min-height 280px

.lara-modal_close-button
    position absolute
    width 30px
    height 30px
    top 0
    right 0
    cursor pointer
    &_box
        position absolute
        top 5px
        left 5px
        width 20px
        height 20px
        transition 0.25s
        ._line
            position absolute
            top 10px
            right 0
            width 100%
            height 1px
            transform-origin center
            background #555
            &--1
                transform rotate(45deg)
            &--2
                transform rotate(-45deg)
        &:hover
            ._line
                background #222

.lara-modal_box--left
    .lara-modal_close-button
        right auto
        left 0